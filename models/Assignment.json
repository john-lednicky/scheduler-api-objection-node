{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Assignment",
    "description": "Represents the association of a Person with an Event (i.e. the person is assigned to the event).",
    "type": "object",
    "required": [
        "personId",
        "eventId",
        "updateUser",
        "updateDttm"
    ],
    "properties": {
        "personId": {
            "type": "integer"
        },
        "eventId": {
            "type": "integer"
        },
        "updateUser": {
            "type": "string",
            "minLength": 1,
            "maxLength": 45,
            "pattern": "^[a-zA-Z0-9 .-@]+$"
        },
        "updateDttm": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}(.\\d{2})?$"
        }
    }
}