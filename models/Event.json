{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Event",
    "description": "An activity that has been scheduled on the calendar.",
    "type": "object",
    "required": [
        "eventTypeId",
        "beginDttm",
        "endDttm",
        "updateUser",
        "updateDttm"
    ],
    "properties": {
        "id": {
            "type": "integer",
            "description": "The unique id of this event, autogenerated in the database.",
            "example": 1320
        },
        "eventTypeId": {
            "type": "integer",
            "description": "The unique id of the related event type.",
            "example": 3
        },
        "beginDttm": {
            "type": "string",
            "description": "The date and time the event begins.",
            "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}(.\\d{2})?$",
            "example": "2021-03-08 11:00:00"
        },
        "endDttm": {
            "type": "string",
            "description": "The date and time the event ends.",
            "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}(.\\d{2})?$",
            "example": "2021-03-08 11:00:00"
        },
        "peopleNeeded": {
            "type": "integer",
            "description": "The number of people needed to staff the event fully.",
            "minimum": 1,
            "maximum": 25,
            "example": 3
        },
        "comment": {
            "type": "string",
            "description": "Additional information about the event.",
            "minLength": 0,
            "maxLength": 500,
            "pattern": "^[a-zA-Z0-9 .,:;\\-?!&/\\\\']*$",
            "example": "On this date, we will be deep-cleaning the walk-in."
        },
        "updateUser": {
            "type": "string",
            "description": "The username of the person who last updated this event.",
            "minLength": 1,
            "maxLength": 45,
            "pattern": "^[a-zA-Z0-9 .-@]+$",
            "example": "john.d.lednicky"
        },
        "updateDttm": {
            "type": "string",
            "description": "The date and time when this event was last updated.",
            "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}(.\\d{2})?$",
            "example": "2021-03-08 11:00:00"
        }
    }
}