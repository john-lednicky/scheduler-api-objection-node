{
    "env": {
        "node": true,
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"]        
    },
    "overrides": [
        {
          "files": ["*.json"],
          "rules": {
            "quotes": ["error", "double"]
          }
        }
      ]    
}
